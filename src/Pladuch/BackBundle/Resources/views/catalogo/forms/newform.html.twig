<div class="col-xs-12">

    {{ form_start(form, {'method': 'POST'}) }}

    {{ form_widget(form._token) }}

    <div class="col-xs-12">
        <div class="col-xs-12 form-group">
            {% if form.nombre.vars.errors|length %}
                <div class="col-xs-12">
                    {% for error in form.nombre.vars.errors %}
                        <ul class="list-group">
                            <li class="list-group-item list-group-item-danger">
                                {{ error.message }}
                            </li>
                        </ul>
                    {% endfor %}
                </div>
            {% endif %}
            <div class="col-xs-12 col-md-4">
                {{ form_label(form.nombre, 'Nombre:', {'label_attr': {'class': 'control-label'}}) }}
            </div>
            <div class="col-xs-12 col-md-8">
                {{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="col-xs-12 form-group">
            {% if form.file.vars.errors|length %}
                <div class="col-xs-12">
                    {% for error in form.file.vars.errors %}
                        <ul class="list-group">
                            <li class="list-group-item list-group-item-danger">
                                {{ error.message }}
                            </li>
                        </ul>
                    {% endfor %}
                </div>
            {% endif %}
            <div class="col-xs-12 col-md-4">
                {{ form_label(form.file, 'Fichero:', {'label_attr': {'class': 'control-label'}}) }}
            </div>
            <div class="col-xs-12 col-md-8">
                {{ form_widget(form.file, {'attr': {'accept': 'image/*'}}) }}
            </div>
        </div>
    </div>

    <div class="col-xs-12 text-right">
        <button type="submit" class="btn btn-success">Guardar</button>
    </div>

    {{ form_end(form) }}

</div>